<div id="content-1" class="content shadow border rounded p-2" value="people">
    <div class="container-fluid">
        <div class="row">
            {{#if user}}
            <div class="col-12 col-sm-3">
                <img src="../../assets/img/avt.jpg" alt="Ảnh đại diện" srcset="" class="img-thumbnail img-fluid mt-3" style="width: 100%;">
            </div>
            <div class="col-sm-9">
                <p class="title text-blue text-center text-sm-left my-3" style="font-size: 1.8rem">Nguyễn Tuấn Khanh</p>
                <div class="container info-details border border-bottom-0">
                    <div class="row border-bottom">
                        <div class="col-4 text-right bg-light py-1">Ngày sinh</div>
                        <div class="col-8 py-1" style="font-weight: 500;">{{this.birthday}}</div>
                    </div>
                    <div class="row border-bottom">
                        <div class="col-4 text-right bg-light py-1">CMND</div>
                        <div class="col-8 py-1" style="font-weight: 500;">{{this.NatID}}</div>
                    </div>
                    <div class="row border-bottom">
                        <div class="col-4 text-right bg-light py-1">Địa chỉ</div>
                        <div class="col-8 py-1" style="font-weight: 500;">Bình Phước</div>
                    </div>
                    <div class="row border-bottom">
                        <div class="col-4 text-right bg-light py-1">Trạng thái</div>
                        <div class="col-8 py-1" style="font-weight: 500;">{{this.status}}</div>
                    </div>
                    <div class="row border-bottom">
                        <div class="col-4 text-right bg-light py-1">Những người liên đới</div>
                        <div class="col-8 py-1" style="font-weight: 500;">
                            {{#each this.relative}} {{this}}, {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            {{else}}
            {{#if user}}
                <h3 class="text-uppercase">Không có dữ liệu</h3>
            {{/if}}
        </div>
        {{#if user}}
        <div class="row my-5">
            <div class="col-12">
                <h5>Lịch sử điều trị:</h5>
                <div class="history-progress">
                    <ul>
                        {{#each this.f_History}}
                            <li class="">Bù Gia Mập</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

{{#section 'script'}}

{{/section}}