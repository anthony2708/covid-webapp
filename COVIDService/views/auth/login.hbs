<div class="container-lg d-flex flex-column justify-content-around">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-6 text-center">
      <p class="tite h1 text-red py-4 text-uppercase">Covid-webapp</p>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <form
        class="card shadow"
        action="/account/login"
        method="POST"
        novalidate
      >
        <h4 class="card-header text-capitalize pl-4">Đăng nhập</h4>
        <div class="card-body p-4">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="username"
              name="username"
              placeholder="Username"
              rules="required"
            />
            <span class="invalid-feedback"></span>
          </div>

          <div class="form-group">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              placeholder="Mật khẩu"
              rules="required"
            />
            <span class="invalid-feedback"></span>
          </div>

          <div class="form-group form-check">
            <input
              type="checkbox"
              class="form-check-input"
              id="keeping"
              name="keeping"
            />
            <label
              class="form-check-label"
              for="keeping"
              style="font-size: 1rem"
            >Duy trì đăng nhập</label>
          </div>
          <button
            type="submit"
            class="btn btn-red text-white font-weight-bold w-100 mb-1 text-uppercase"
          >
            Đăng nhập
          </button>
          <a
            href="/account/forgotpassword"
            class="card-link"
            style="font-size: 0.85rem"
          >Quên mật khẩu</a>
        </div>
        <div class="card-footer text-center">
          <p class="text-muted d-inline-block m-0">
            Bạn chưa có tài khoản?
          </p>
          <a href="/account/signup" class="card-link">Đăng ký ngay</a>
        </div>
      </form>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-6">
      <p class="mt-5 mb-3 text-center mb-auto">
        Copyright &copy; 2021-2022 by ....
      </p>
    </div>
  </div>
</div>