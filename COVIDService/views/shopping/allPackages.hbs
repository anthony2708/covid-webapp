<div id="content-1" class="content shadow border rounded container-fluid">
    <h3 class="text-lg-left text-center pt-3 text-uppercase text-blue border-bottom font-weight-bold"
        style="font-size: 1.8rem;">
        Danh sách các gói nhu yếu phẩm
    </h3>
    <div class="sub-navbar d-flex justify-content-md-between flex-md-row flex-column my-4" style="font-size:.9rem">
        <!-- Search-form -->
        <form id='sub-nav__search-form' class="form-inline" action="/manager/people" method="GET">
            <div class="form-group mb-2">
                <label for="sub-nav__search-input">Tìm kiếm</label>
                <input type="text" class="form-control shadow-none mx-sm-2" id="sub-nav__search-input"
                    name="search"></input>
            </div>
        </form>

        <!-- Sort -->
        <form id='sortby-form' class="form-inline" action="/manager/people" method="GET">
            <div class="form-group mb-2">
                <label for="sub-nav__sort-by">Sắp xếp theo</label>
                <select class="form-control shadow-none custom-select mx-sm-2" id="sub-nav__sort-by"
                    aria-label="sort-by" name="sort_by">
                    <option class="py-1" value="name-ascending" data-filter="&sortby=(name:asc)">Tên: A &rarr; Z
                    </option>
                    <option class="py-1" value="name-descending" data-filter="&sortby=(name:desc)">Tên: Z &rarr; A
                    </option>
                    <option class="py-1" value="price-ascending" data-filter="&sortby=(price:asc)">Giá: Tăng dần
                    </option>
                    <option class="py-1" value="price-descending" data-filter="&sortby=(price:desc)">Giá: Giảm dần
                    </option>
                    <option class="py-1" value="limitPackage-ascending" data-filter="&sortby=(limitPackage:asc)">Mức gói
                        giới hạn: Tăng dần</option>
                    <option class="py-1" value="limitPackage-descending" data-filter="&sortby=(limitPackage:desc)">Mức
                        gói
                        giới hạn: Giảm dần</option>
                    <option class="py-1" value="limitTime-ascending" data-filter="&sortby=(limitTime:asc)">Thời gian
                        giới
                        hạn: Tăng dần</option>
                    <option class="py-1" value="limitTime-descending" data-filter="&sortby=(limitTime:desc)">Thời gian
                        giới hạn: Giảm dần</option>
                </select>
            </div>
        </form>
    </div>
    <!-- LIST OF PACKAGES -->
    <div class="table-responsive-xl table-hover">
        <table class="table table-content border mb-0 menu">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên gói</th>
                    <th scope="col">Các sản phẩm trong gói</th>
                    <th class="text-center" scope="col">Mức giới hạn gói/người</th>
                    <th class="text-center" scope="col">Thời gian giới hạn</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
                {{#if packages}}
            <tbody>
                {{#each packages}}
                <tr class="section">
                    <th class="align-middle" scope="row">1</th>
                    <td class="align-middle name" title="name">
                        <a class="nav-link p-0 details-link text-default" href="/packages/:id">
                            Gói lương thực, thực phẩm
                        </a>
                    </td>
                    <td class="align-middle products" title="products">Gạo, Mì gói</td>
                    <td class="align-middle limit-package text-center" title="limit-package">2</td>
                    <td class="align-middle limit-time text-center" title="limit-time">2 Tuần</td>
                    <td colspan="6" class="align-middle text-center">
                        <!-- Call to action buttons -->
                        <ul class="list-inline m-0">
                            <li class="list-inline-item mb-1">
                                <a role="button" class="btn btn-success btn-sm rounded buy-btn" href="#">
                                    <i class="fas fa-cart-plus"></i>
                                    <span class="d-none d-md-inline">Mua ngay</sp>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
