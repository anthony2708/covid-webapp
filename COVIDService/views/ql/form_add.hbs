<form class="form" action="/ql" method="post" style="width:50vw">
  <h1 class="display-5">ADD NEW QUARANTINE LOCATION</h1>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" placeholder="Address" name="address" />
  </div>
  <div class="form-group">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control" id="capacity" placeholder="Capacity" name="capacity" />
  </div>
  <div class="form-group">
    <label for="currentCapacity">Current Capacity</label>
    <input type="number" class="form-control" id="currentCapacity" placeholder="Current Capacity" name="currentCapacity" />
  </div>
  {{#if err}}
    <div class="alert alert-danger" role="alert">
      {{err}}
    </div>
  {{/if}}
  <button type="submit" class="btn btn-default btn-success">
    Create
  </button>
</form>