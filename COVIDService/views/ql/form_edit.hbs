<form
  class="form"
  action="/ql/{{ql.f_ID}}?_method=PUT"
  method="post"
  style="width:50vw"
>
  <h1 class="display-5">EDIT QUARANTINE LOCATION</h1>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" placeholder="Address" name="address" value="{{ql.f_Address}}"" />
  </div>
  <div class="form-group">
    <label for="capacity">Capacity</label>
    <input type="number" class="form-control" id="capacity" placeholder="Capacity" name="capacity" value={{ql.f_Capacity}} />
  </div>
  <div class="form-group">
    <label for="currentCapacity">Current Capacity</label>
    <input
      type="number"
      class="form-control"
      id="currentCapacity"
      placeholder="Current Capacity"
      name="currentCapacity"
      value={{ql.f_CurrentCapacity}}
    />
  </div>
  {{#if err}}
    <div class="alert alert-danger" role="alert">
      {{err}}
    </div>
  {{/if}}
  <button type="submit" class="btn btn-block btn-success">
    Confirm Change
  </button>
</form>
<form action="/ql/{{ql.f_ID}}?_method=DELETE" method="post">
  <button class="btn btn-block btn-outline-danger my-3 my-sm-0" type="submit">DELETE THIS Q.LOCATION</button>
</form>