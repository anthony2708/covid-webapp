<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/all.min.css" />
  <script src="/js/jquery-3.6.0.min.js"></script>
  <script src="/js/popper.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/all.min.js"></script>
  <link rel="stylesheet" href="/css/main.css" />
  <script src="/js/loading.js"></script>
</head>

<body>
  <div class="loading text-center">
    <div class="spinner-border spinner-border-lg text-primary" role="status" aria-hidden="true"></div>
    <span class="my-5">
      <span class="h3 font-weight-bold">Đang tải</sp>
        <div class="spinner-grow spinner-grow-xs text-primary mx-1 my-1" role="status"></div>
        <div class="spinner-grow spinner-grow-xs text-red mx-1 my-1" role="status"></div>
        <div class="spinner-grow spinner-grow-xs text-green mx-1 my-1" role="status"></div>
      </span>
  </div>
  {{!-- DEFAULT HEADER --}}
  {{#section 'header'}}
  <header id="main-navbar" class="navbar navbar-expand-lg navbar-light sticky-top">
    <h3 class="my-0 flex-md-grow-1 text-center text-md-left text-default" href="#">COVID-WEBAPP</h3>
    <form
      class="form-inline my-2 mx-3 border border-dark rounded-pill overflow-hidden flex-grow-1 flex-md-grow-0 flex-lg-grow-1 bg-white order-1 order-sm-0">
      <div class="input-group flex-grow-1">
        <input class="form-control border-0  shadow-none" type="text" placeholder="Tìm kiếm" aria-label="Search"
          name='search'>
        <div class="input-group-prepend">
          <button class="btn text-center" type="submit"><i class="fas fa-search"></i></button>
        </div>
      </div>
    </form>
    <button class="order-n1 navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#sidebar"
      aria-controls="sidebar" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    <button class="navbar-toggler  border-0" type="button" data-toggle="collapse" data-target="#account-menu"
      aria-controls="account-menu" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fas fa-ellipsis-v"></i>
    </button>
    <div class="collapse navbar-collapse flex-grow-0 text-right" id="account-menu">
      <div class="btn-group nav-item dropdown ml-auto">
        <a class="nav-link dropdown-toggle text-default" href="#" id="account-menu__sections" role="button"
          data-toggle="dropdown" aria-expanded="false">
          <img src="/img/avt.jpg" alt="" srcset="" class="rounded-circle" style="width:42px">
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="account-menu__sections">
          <a class="dropdown-item nav-link" href="#">
            <i class="fas fa-user mr-1 "></i>
            Tài khoản của tôi
          </a>
          <a class="dropdown-item nav-link" href="/auth/changepassword">
            <i class="fas fa-user mr-1 "></i>
            Đổi mật khẩu
          </a>
          <form class="dropdown-item m-0" action="https://localhost:5000/signinPass" method="post" target="_blank">
            <input name="username" type="text" style="display:none" value={{value}}>
            <button class="dropdown-item" type="submit">
              <i class="fas fa-sign-out-alt mr-1 m-0"></i>
              Nạp tiền
            </button>
          </form>
          <div class="dropdown-divider m-0"></div>
          <a class="dropdown-item" href="/auth/signout">
            <i class="fas fa-sign-out-alt mr-1"></i>
            Đăng xuất
          </a>
        </div>
      </div>
      </ul>
    </div>
  </header>
  {{/section}}
  {{!-- DEFINE A 'header' SECTION--}}
  {{{_sections.header}}}
  <div class="main-content container-fluid">
    <div class="row">
      {{!-- DEFAULT SIDEBAR --}}
      {{#section 'sidebar'}}
      <nav class="col-md-3 col-lg-2 collapse navbar-collapse d-lg-block shadow sidebar" id="sidebar">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center justify-content-md-start justify-content-center my-2"
                href="#" aria-current="page">
                <i class="fas fa-home"></i>
                <span class="ml-2">Dashboard</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center justify-content-md-start justify-content-center my-2"
                href="/account">
                <i class="fas fa-users"></i>
                <span class="ml-2">Thêm xóa tài khoản quản lý</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center justify-content-md-start justify-content-center my-2"
                href="/user/all">
                <i class="fas fa-users"></i>
                <span class="ml-2">Nguời liên quan Covid-19</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-flex align-items-center justify-content-md-start justify-content-center my-2"
                href="/product">
                <i class="fas fa-fish"></i>
                <span class="ml-2"> Nhu yếu phẩm</span>
              </a>
            </li>

            <li class="nav-item ">
              <a class="nav-link d-flex align-items-center justify-content-md-start justify-content-center"
                href="/package">
                <i class="fas fa-box"></i>
                <span class="ml-2">Gói nhu yếu phẩm</span>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle d-flex align-items-center justify-content-md-start justify-content-center"
                href="#" id="statistics-nav" role="button" data-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-chart-line"></i>
                <span class="ml-2">Thống kê</span>
              </a>
              <div class="dropdown-menu text-center text-md-left" aria-labelledby="statistics-nav" style="right: 0; ">
                <a class="dropdown-item" href="/statistic/sta">Người liên quan Covid-19</a>
                <a class="dropdown-item" href="/statistic/ssta">Nhu yếu phẩm</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>
      {{/section}}
      {{!-- DEFINE A 'sidebar' SECTION --}}
      {{{_sections.sidebar}}}

      <main class=" pt-4 ml-sm-auto col-lg-10">
        {{!-- DEFINE A 'body' SECTION --}}
        {{{body}}}
        <footer class="container-fluid py-3 my-4 border-top">
          <div class="d-flex align-items-center justify-content-center">
            <span class="text-muted">© 2021 Company, Inc</span>
          </div>
        </footer>
      </main>
    </div>
  </div>
  
  {{{_sections.modal}}}

  <script src="/js/sidebar.js"></script>
  <script src="/js/main.js"></script>
  {{!-- DEFINE A 'script' SECTION --}}
  {{{_sections.script}}}
</body>

</html>